             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="1010">
    <Grid>

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="AddActionDialogHost" DialogTheme="Dark">

            <materialDesign:DialogHost.DialogContent>

                <Grid Width="300" Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBox
                        Grid.Row="0"
                        Margin="0 10 0 10"
                        Width="280"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="400"
                        materialDesign:HintAssist.Hint="Action Name"
                        x:Name="newActionNameTextBox"/>

                    <TextBox
                        Grid.Row="1"
                        Margin="0 10 0 10"
                        Width="280"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="400"
                        IsEnabled="False"
                        materialDesign:HintAssist.Hint="Message"
                        x:Name="newMessageTextBox"/>

                    <StackPanel
                        Grid.Row="2"
                        Orientation="Horizontal">

                        <Button
                            IsEnabled="True"
                            Margin="20 10 20 10" 
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Bottom"
                            Height="50"
                            Width="50"
                            Background="#FFC7BA40"
                            BorderBrush="#FF8F8129"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.Value="100"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="#FF8BC34A"
                            Name="DialogPathButton"
                            Click="DialogPathButton_Click"
                            Content="{materialDesign:PackIcon File}" />

                        <ComboBox
                            Margin="20 15 15 10"
                            materialDesign:ThemeAssist.Theme="Dark"
                            HorizontalAlignment="Center"
                            Width="100"
                            SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem
                                IsSelected="True"
                                Content="Open File">
                            </ComboBoxItem>
                            <ComboBoxItem
                                Content="Open Website">
                            </ComboBoxItem>
                            <ComboBoxItem
                                Content="Close File">
                            </ComboBoxItem>
                            <ComboBoxItem
                                Content="Type">
                            </ComboBoxItem>
                        </ComboBox>

                        <Button
                            Margin="0 0 0 10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Save Action"
                            Click="Add_Action">
                            Save
                        </Button>

                    </StackPanel>

                </Grid>

            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="MissingDialog" DialogTheme="Dark">

            <materialDesign:DialogHost.DialogContent>

                <Grid Width="200" Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Name="MissingDialogText" 
                        Text="" 
                        HorizontalAlignment="Center" 
                        Margin="0 20 0 20"></TextBlock>

                    <Button
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="OK"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        Content="OK"></Button>

                </Grid>

            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <Button
            Style="{StaticResource MaterialDesignFloatingActionButton}"
            ToolTip="MaterialDesignFloatingActionButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="40"
            Panel.ZIndex="1"
            Click="Open_New_Action_Dialog">

            <materialDesign:PackIcon
                Kind="Add"
                Height="24"
                Width="24" />
