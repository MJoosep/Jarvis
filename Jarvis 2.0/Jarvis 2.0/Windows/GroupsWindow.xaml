    <Grid>

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="AddGroupDialogHost" DialogTheme="Dark">
            
            <materialDesign:DialogHost.DialogContent>
                
                <Grid Width="300" Margin="20">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <TextBox
                        Grid.Row="0"
                        Margin="0 10 0 10"
                        Width="280"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="400"
                        materialDesign:HintAssist.Hint="Group Name"
                        x:Name="newGroupNameTextBox"/>
                    
                    <TextBox
                        Grid.Row="1"
                        Margin="0 10 0 10"
                        Width="280"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        MaxWidth="400"
                        materialDesign:HintAssist.Hint="Command"
                        x:Name="newGroupCommandTextBox"/>
                    
                    <Button
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        ToolTip="Save Group"
                        Click="Add_Group">
                        Save
                    </Button>
                    
                </Grid>
                
            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="MissingDialog" DialogTheme="Dark">

            <materialDesign:DialogHost.DialogContent>

                <Grid Width="200" Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Name="MissingDialogText" 
                        Text="" 
                        HorizontalAlignment="Center" 
                        Margin="0 20 0 20"></TextBlock>

                    <Button
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="OK"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        Content="OK"></Button>

                </Grid>

            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

        <Button
            Style="{StaticResource MaterialDesignFloatingActionButton}"
            ToolTip="MaterialDesignFloatingActionButton"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="40"
            Panel.ZIndex="1"
            Click="Open_New_Group_Dialog">
            
            <materialDesign:PackIcon
                Kind="Add"
                Height="24"
                Width="24" />
        </Button>

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="ActionsListDialog" DialogTheme="Dark">

            <materialDesign:DialogHost.DialogContent>

                <Grid Width="400" Height="300" Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <TextBlock
                        Grid.Row="0"
                        Margin="16 16 12 8"
                        FontSize="16">
                        Actions
                    </TextBlock>

                    <ScrollViewer
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Hidden">

                        <StackPanel 
                            x:Name="ActionsCheckList" Height="250">
                        
                        </StackPanel>
                    </ScrollViewer>

                    <Button
                        Grid.Row="2"
                            Margin="0 0 0 10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="Save Action"
                            Click="Save_CheckedActions">
                        Save
                    </Button>
                </Grid>

            </materialDesign:DialogHost.DialogContent>

        </materialDesign:DialogHost>

